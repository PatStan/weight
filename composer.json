{
    "name": "patstan/weight",
    "description": "Simple weight conversions in PHP",
    "keywords": [
        "patstan",
        "weight"
    ],
    "homepage": "https://github.com/patstan/weight",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Stanton",
            "email": "patrickstanton50@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PatStan\\Weight\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PatStan\\Weight\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
